#!/usr/bin/env zsh

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm

# This insure the required version of node is installed and switched to
nvm install $(node -p -e "require('./package.json').engines.node.slice(1)") && nvm use $(node -p -e "require('./package.json').engines.node.slice(1)")